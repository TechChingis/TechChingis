# Python calculator

operator = input("Enter an operator (+ - * /): ")
num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))

if operator == "+":
    result = num1 + num2
elif operator == "-":
    result = num1 - num2
elif operator == "*":
    result = num1 * num2
elif operator== "/":
    #Handle Division by zero
    if num2 != 0:
        result = num1 / num2
    else:
        result = "Error, Division by Zero"
else:
    result = "Invalid Operator"

#Dispaly the result
print(f"The result is: {result}!")

operator = input("Enter an operator (+ - * /): ")
num1 = float(input("Enter the first number: "))
num2 = float(input("Enter the second number: "))

if operator == "+":
    result = num1 + num2
    print(result)
elif operator == "-":
    result = num1 - num2
    print(result)
elif operator == "*":
    result = num1 * num2
    print(result)
elif operator == "/":
    result = num1 /num2
    print(result)
else:
    print(f"{operator} is not a valid operator")
    
# Weight converter

# Ask the user to choose a conversion type
print("Weight Conversion Program")
print("Choose a conversion type:")
print("1. Kilograms to Pounds")
print("2. Pounds to Kilograms")
print("3. Kilograms to Grams")
print("4. Grams to Kilograms")

# Take user input for the conversion choice
choice = input("Enter the number of the conversion type (1/2/3/4): ")

# Ask for the weight value to convert
weight = float(input("Enter the weight value: "))

# Perform the conversion based on user choice
if choice == "1":
    result = weight * 2.20462  # Kilograms to Pounds
    print(f"{weight} kilograms is equal to {result:.2f} pounds.")
elif choice == "2":
    result = weight / 2.20462  # Pounds to Kilograms
    print(f"{weight} pounds is equal to {result:.2f} kilograms.")
elif choice == "3":
    result = weight * 1000  # Kilograms to Grams
    print(f"{weight} kilograms is equal to {result:.2f} grams.")
elif choice == "4":
    result = weight / 1000  # Grams to Kilograms
    print(f"{weight} grams is equal to {result:.2f} kilograms.")
else:
    print("Invalid choice! Please enter 1, 2, 3, or 4.")
