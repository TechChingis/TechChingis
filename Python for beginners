# Variables concepts

# Strings:series of text
future_techgiant = "chingis"
food = "pizza"
email = "musky.cY@gmail.com"

# Intergrers:whole numbers
age = 14
the_num_students = 28
qaunataity = 3

# Float:Numbers with a decimal portion
price = 99.99
gpa = 5.0
distance = 6.2

# boolean:either True or Flase/binary

is_student = True
for_sale = False
is_online = True 
sheep_yawns = True

if for_sale:
    print("This Item is for sale")
else:    
    print("This Item is Not for sale")


# typecasting  

name = "Chingis"
peices = 2
price = 6.99
bought = True

price = float(peices) 
peices = int(price)

print(type(bought))
 print(peices)

 # input() A function that prompts the user to enter data 
# returns the entered data as a string 

name = input("Hello what is your name?:")
age = int(input("how old are you?:"))

age = age + 1

print(f"Hello {name}!")
print("HAPPY BIRTHDAY")
print(f"you are {age}!")
